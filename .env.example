# KingSick Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=kingsick

# Full database URL (used by backend)
# For Docker: postgresql+asyncpg://postgres:postgres@db:5432/kingsick
# For local: postgresql+asyncpg://postgres:postgres@localhost:5432/kingsick
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/kingsick

# =============================================================================
# Redis Configuration
# =============================================================================
# For Docker: redis://redis:6379/0
# For local: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Security Settings
# =============================================================================
# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET=change-this-secret-in-production

# Encryption Key for sensitive data (32 bytes, hex encoded)
ENCRYPTION_KEY=change-this-32-byte-key-in-prod

# =============================================================================
# Korea Investment & Securities API (PyKis)
# =============================================================================
KIS_APP_KEY=
KIS_APP_SECRET=
KIS_ACCOUNT_NO=
# Set to true for real trading, false for paper trading
KIS_REAL_TRADING=false

# =============================================================================
# Notification Settings
# =============================================================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Slack Webhook
SLACK_WEBHOOK_URL=

# =============================================================================
# Frontend Settings (NEXT_PUBLIC_ prefix for client-side access)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_APP_NAME=KingSick
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000"]
